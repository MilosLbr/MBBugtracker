@model IEnumerable<DataModels.ViewModels.ApplicationUserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">All app users</h1>

<a asp-controller="ApplicationRoles" asp-action="Index">Manage Roles</a>
 <hr />
<div class="allUsersAndRoles">
    @foreach (var user in Model)
    {
    <div class="row justify-content-between align-items-center text-center pb-2 mb-2 border-bottom">
        <div class="col-md-4">
            @user.UserName
        </div>
        <div class="col-md-4">
            @foreach(var role in user.UserRoles)
            {
            <p class="m-0">@role.Role.Name</p>  
            }
        </div>
        <div class="col-md-4 row">
            <a class="col-md-4" asp-action="EditRoles" asp-route-userId="@user.Id">Edit Roles</a>
            <a class="col-md-4" asp-action="Delete" asp-route-id="@user.Id">Delete User</a>
        </div>
    </div>
    }
</div>

