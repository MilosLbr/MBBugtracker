@model DataModels.ApplicationUser

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<a asp-controller="ApplicationRoles" asp-action="Index">Roles  </a>
 
<div>
    @foreach (var user in (IEnumerable<DataModels.ApplicationUser>)ViewData["users"])
    {
    <div class="row justify-content-between text-center mb-2">
        <div class="col-md-4">
            @user.UserName
        </div>
        <div class="col-md-4">
            <a asp-action="EditRoles" asp-route-userId="@user.Id">Edit Roles</a>
        </div>
        <div class="col-md-4">
            <a asp-action="Delete" asp-route-id="@user.Id">Delete User</a>
        </div>
    </div>
    }
</div>

